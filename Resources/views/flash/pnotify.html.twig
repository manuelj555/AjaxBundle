{% block ajax_flash_css -%}
    <link href="{{ asset('bundles/ku_ajax/vendor/pnotify/pnotify.custom.min.css') }}" type="text/css"
          rel="stylesheet" media="screen"/>
{%- endblock %}

{% block ajax_flash_js -%}
    <script src="{{ asset('bundles/ku_ajax/vendor/pnotify/pnotify.custom.min.js') }}"></script>
    <script src="{{ asset('bundles/ku_ajax/js/plugin.js') }}"></script>
{%- endblock %}

{% block ajax_flash_plugin -%}
    <script>
        jQuery(function ($) {
            $.ajaxFlash('*', function (message, type, title, icon) {
                new PNotify({
                    type: type,
                    text: message,
                    title: title,
                    icon: icon,
                    {% block ajax_flash_plugin_extra %}{% endblock %}
                });
            });
        })
        ;
    </script>
{%- endblock %}
